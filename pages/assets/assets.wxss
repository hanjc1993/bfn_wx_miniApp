/* pages/coupons/coupons.wxss */
.page {
  background-color:#ffffff;
  height:100%;
  width: 100%;
}
.hide{
  display: none;
}
.show{
  display: block;
}
.header {
  width: 100%;
  height: 120rpx;
  font-size: 40rpx;
  line-height: 120rpx;
  padding-left: 50rpx;
}
.header_after {
  width: 100%;
  height: 60rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  padding-left: 50rpx;
}
.header_after_left {
  float: left;
  color:#586892;
}
.header_after_right {
  float: left;
  color:#999999;
  margin-left: 50rpx;
}
.header_last {
  margin-top: 40rpx;
  width: 100%;
  height: 110rpx;
  position: relative;
}
.header_image {
  margin-left: 50rpx;
  width: 670rpx;
  height: 110rpx;
}
.header_image_text{
 position: absolute;
 width: 100%;
 text-align: center;
 font-size: 35rpx;
 color: #FFF;
 font-weight: 600;
 top:32rpx;
 left:0;
}
.list {
margin-top: 22rpx;
margin-left: 50rpx;
width: 100%;
/* height: 180rpx; */
}
.list_title {
 width: 100%;
 height: 60rpx; 
 font-size: 35rpx;
}
.list_mid {
 margin-top: 2rpx;
 width: 100%;
 height: 50rpx; 
 line-height: 50rpx;
 color: #999999;
}
.list_mid_left{
  float: left;
  height: 50rpx;
  width: 40rpx;
}
.list_mid_left_image {
  margin-top: 8rpx;
  width: 30rpx;
  height: 30rpx;
}
.list_mid_right{
 
  font-size: 30rpx;
  height: 50rpx;
  width: 600rpx;
  float: left;
}
.list_bottom {
 color: #999999;
 width: 100%;
 height: 50rpx; 
}
.list_bottom_left{
  float: left;
  height: 50rpx;
  width: 40rpx;
}
.list_bottom_left_image {
  margin-top: 16rpx;
  width: 30rpx;
  height: 30rpx;
}
.list_bottom_right{
  margin-top: 8rpx;
  font-size: 30rpx;
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  width: 600rpx;
}
.bottom {
  margin-top: 35rpx;
  width: 100%;
  /* height: 650rpx; */
  background-color: #f2f2f2;
}
.bottom_image{
  width: 100%;
  height: 520rpx;
}
.bottom_top {
  background-color: #ffffff;
  width: 100%;
  font-size: 25rpx;
  height: 45rpx;
}
.bottom_top_line {
  margin-left: 50rpx;
  float: left;
  width: 280rpx;
  border: 2rpx solid #e5e5e5;
}
.bottom_top_txt {
  line-height: 10rpx;
  float: left;
  margin-left: 20rpx;
}
.bottom_top_line_right {
  margin-left: 20rpx;
