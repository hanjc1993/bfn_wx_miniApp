}
/* title Bar部分 */
/* title Bar主 */
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  width: 100%;
  height: 80rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #a48b77;
}
.navbar .item.active{
  background-color: #a48b77;
  color: #ffffff;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  height: 8rpx;
  width: 50rpx;
  margin-left: 100rpx;
  background: #a48b77;
}
